<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">
      <img src="../../assets/img/burger.png" height="200px" width="200px">Devour the Burger!</h1>
    <h2>Eat all you want, no calories!</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>Burgers to be devoured</h2>
    <hr>
    <ul>       
        {{#each burgers}} 
          {{#unless devoured}}
            <ul>
              {{burger_name}}
              <form action="/burgers/{{id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Eat Me!</button>
              </form>
            </ul>  
          {{/unless}} 
        {{/each}}
    </ul>


  </div>
  <div class="col-md-6">
    <h2>Burgers eaten up</h2>
    <hr>
    <ul>       
        {{#each burgers}} 
          {{#if devoured}}
            <ul>
              {{burger_name}}
            </ul>  
          {{/if}} 
        {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Add a burgie</h2>
    <form action="/burgers/{{burger_name}}?_method=POST" method="POST">
      <label for="burgerInput">Burger:</label>
      <input type="text" name="burger_name" placeholder="Make it good!">
    <br>
      <button type="submit">Add Burger</button>
    </form>

  </div>
</div>
