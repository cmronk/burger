{{!-- utilizing bootstrap  --}}
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">
      <img src="https://cdn.pixabay.com/photo/2016/09/16/19/13/burger-1674881_1280.png" height="200px" width="200px">Devour the Burger!</h1>
    <h2>Eat all you want, no calories!</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>Burgers to be devoured</h2>
    <hr>
    <ul>
      {{#each burgers}} 
        {{#unless this.devoured}}
          <h3>{{this.id}}.{{this.burger_name}}</h3>
            <p>
            <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Eat me!</button>
            </form>
            </p>
     
      {{/unless}} {{/each}}
    </ul>

  </div>
  <div class="col-md-6">

    <h2>Burgers eaten up</h2>
    <hr>
    <ul>
      <ul>
        {{#each burgers}} {{#if this.devoured}}
        <h3>{{this.id}}.{{this.burger_name}}</h3>
        {{/if}} {{/each}}
      </ul>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Add a burgie</h2>
    <form action="/burgers/insertOne/{{this.burger_name}}?_method=POST" method="POST">
      <label for="burgerInput">Burger:</label>
      <input type="text"  name="burger_name">
    <br>
      <button type="submit">Add Burger</button>
    </form>

  </div>
</div>